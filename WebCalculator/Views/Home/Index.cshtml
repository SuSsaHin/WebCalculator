@{
    ViewBag.Title = "Calculator";
}

@model WebCalculator.Models.CalculatorModel

@Html.Partial("Plugins", Model.Operators)

@using (Ajax.BeginForm("CalculatorResult", new AjaxOptions { UpdateTargetId = "calculatorResults"}))
{
    <fieldset>
        <legend>Калькулятор</legend>
        @Html.LabelFor(m => m.InputExpression)
        @Html.TextBoxFor(m => m.InputExpression, new { size = 50 } )
        <input type="submit" value="Посчитать" />
    </fieldset>
}
@Html.Partial("CalculatorResult")
